						<!-- firstHeading -->
			<h1 id="firstHeading" class="firstHeading" lang="en"><span dir="auto"><i>The Very Best Of</i> (Eagles&#32;album)</span></h1>
			<!-- /firstHeading -->
			<!-- bodyContent -->
